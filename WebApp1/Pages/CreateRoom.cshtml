@page
@model MyApp.Namespace.CreateRoomModel
@{
    ViewData["Title"] = "Create Room";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/site copy.css">
    <title>Create Room</title>
</head>
<body>
    <h1 class="header1">Add Room</h1>
    <form method="post" class="form">
        <div class="form-group">
            <label for="RoomName">Room Name:</label>
            <input type="text" id = "RoomName" name="NewRoom.RoomName" class="form-control" value="@Model.NewRoom.RoomName" required>
        </div>
        <div class="form-group">
            <label for="Capacity">Capacity:</label>
            <input type="number" id="Capacity" name="NewRoom.Capacity" class="form-control" value="@Model.NewRoom.Capacity" required>
        </div>
        <button type="submit" class="btn btn-primary">Create Room</button>
    </form>
</body>
</html>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}