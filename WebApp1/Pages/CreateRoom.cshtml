@page
@model MyApp.Namespace.CreateRoomModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Room</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <section class="form">
        <h4 style="text-align: center;">Create a New Room</h4>
        <form method="post">
            <div class="form-group">
                <label asp-for="NewRoom.RoomName"></label>
                <input asp-for="NewRoom.RoomName" class="form-control" />
                <span asp-validation-for="NewRoom.RoomName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewRoom.Capacity"></label>
                <input asp-for="NewRoom.Capacity" class="form-control" />
            </div>
            <button type="submit" id="create-button" class="btn btn-primary" style="margin-top: 10px;">Create</button>
        </form>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
